{% extends 'base.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <h1>Users: </h1>
    {% for user in users %}
    <ul>
        <li>
            {{ user.email }}
            <button type="button" class="btn btn-light" style="border: solid 2px black">
                <a style="text-decoration: none; color: black" href="/admin/deleteUser/{{ user.id }}">Delete user</a>
            </button>
        </li>
    </ul>
    {% endfor %}
{% endblock %}
